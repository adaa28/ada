#include <stdio.h>
#include <string.h>

void displayWord(char word[], char guessed[], int length) {
    for (int i = 0; i < length; i++) {
        if (guessed[i])
            printf("%c ", word[i]);
        else
            printf("_ ");
    }
    printf("\n");
}

int main() {
    char word[] = "programming"; 
    int length = strlen(word);   
    int guessed[length];         
    memset(guessed, 0, sizeof(guessed)); 

    int chances = 3;  
    int correctGuesses = 0; 
    printf("Welcome to Hangman Game!\n");
    printf("You have %d chances to guess the word correctly.\n", chances);

    while (chances > 0) {
        printf("\nWord to guess: ");
        displayWord(word, guessed, length);

        printf("Enter a letter: ");
        char guess;
        scanf(" %c", &guess);

       
        int found = 0;
        for (int i = 0; i < length; i++) {
            if (word[i] == guess && !guessed[i]) {
                guessed[i] = 1;
                correctGuesses++;
                found = 1;
            }
        }

        if (found) {
            printf("Good guess!\n");
        } else {
            printf("Wrong guess!\n");
            chances--;
        }

        
        if (correctGuesses == length) {
            printf("\nCongratulations! You guessed the word: %s\n", word);
            return 0;
        }

        printf("Chances left: %d\n", chances);
    }

    
    printf("\nGame Over! The word was: %s\n", word);
    printf("The man gets hanged. Better luck next time!\n");

    return 0;
}
