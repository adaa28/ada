#include <stdio.h>

int factorial(int n) {
    int fact = 1;
    for (int i = 1; i <= n; i++)
        fact *= i;
    return fact;
}

int combination(int n, int k) {
    return factorial(n) / (factorial(k) * factorial(n - k));
}

int main() {
    int rows = 5;
    for (int i = 0; i < rows; i++) {
        for (int space = 1; space <= rows - i; space++)
            printf(" ");
        for (int j = 0; j <= i; j++)
            printf("%d ", combination(i, j));
        printf("\n");
    }
    return 0;
}
