#include <stdio.h>

int main() {
    int arr[] = {10, 20, 15, 2, 23, 90, 67};
    int n = sizeof(arr) / sizeof(arr[0]);
    
    for (int i = 0; i < n; i++) {
        if ((i == 0 || arr[i] >= arr[i - 1]) && (i == n - 1 || arr[i] >= arr[i + 1])) {
            printf("Peak element is %d at index %d\n", arr[i], i);
            break; // Stop after finding the first peak
        }
    }

    return 0;
}
